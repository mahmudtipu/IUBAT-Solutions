<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#99CC99"
    tools:context="com.applicationull.iubatsolutions.CourseInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#22b573"
        android:weightSum="4"
        android:orientation="horizontal"
        android:focusable="false"
        android:focusableInTouchMode="true">

        <EditText
            android:textCursorDrawable="@null"
            android:padding="4dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="Search by Name or Code"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:background="@drawable/style_1"
            android:layout_weight="4"
            android:id="@+id/edittextid2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ListView
        android:listSelector="#220062ff"
        android:background="@drawable/homebutton"
        android:dividerHeight="3dp"
        android:divider="#99cc99"
        android:id="@+id/listViewId2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    </ListView>

</LinearLayout>
