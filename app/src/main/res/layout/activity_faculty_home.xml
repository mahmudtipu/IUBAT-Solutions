<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#99CC99"
    tools:context="com.applicationull.iubatsolutions.FacultyHome">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#22b573"
    android:weightSum="4"
    android:orientation="horizontal"
    android:focusable="false"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:focusableInTouchMode="true">

    <EditText
        android:textCursorDrawable="@null"
        android:padding="4dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:hint="Search by name"
        android:layout_gravity="center"
        android:background="@drawable/style_1"
        android:layout_weight="4.7"
        android:id="@+id/edittextid"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="50dp"
        android:layout_weight=".1"
        android:layout_width="20dp"
        android:layout_height="35dp"
        android:src="@drawable/facultysearchicon"/>

</LinearLayout>

    <ListView
        android:listSelector="#220058ff"
        android:layout_gravity="center"
        android:background="@drawable/homebutton"
        android:dividerHeight="3dp"
        android:divider="#99cc99"
        android:id="@+id/listViewId1"
        android:textIsSelectable="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    </ListView>


</LinearLayout>