<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99cc99"
    android:orientation="vertical"
    tools:context="com.applicationull.iubatsolutions.BookBuyer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#22b573">

        <TextView
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="BOOK BUYING HOUSE"
            android:textStyle="bold"/>

    </LinearLayout>

    <ListView
        android:layout_weight="3.5"
        android:layout_gravity="center"
        android:listSelector="#220058ff"
        android:background="@drawable/homebutton"
        android:dividerHeight="3dp"
        android:divider="#99cc99"
        android:id="@+id/listBuyerViewId"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </ListView>


</LinearLayout>
