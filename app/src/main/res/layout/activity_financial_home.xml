<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#99CC99"
    tools:context="com.applicationull.iubatsolutions.FinancialHome">

    <TextView
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:id="@+id/textViewId"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please choose an option -"
        />

    <RadioGroup
        android:layout_marginBottom="30dp"
        android:id="@+id/genderRadioGroupId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <RadioButton
        android:textSize="20sp"
        android:id="@+id/radioLoanButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loan System"
        android:textColor="#000"
        />
    <RadioButton
        android:textSize="20sp"
        android:id="@+id/radioWaiverButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waiver System"
        android:textColor="#000"
        />
    </RadioGroup>
    <Button
        android:id="@+id/nextButtonId"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="90dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/homebutton"
        android:text="NEXT-->>"
        android:textColor="#ffffff"
        android:textSize="20sp"
        />

</LinearLayout>
