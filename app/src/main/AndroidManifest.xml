        <activity android:name=".HomePageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FacultyHome" />
        <activity android:name=".CourseInfo" />
        <activity android:name=".FinancialHome" />
        <activity android:name=".LoanSystem" />
        <activity android:name=".Scholarship" />
        <activity android:name=".BookShopHome" />
        <activity android:name=".BookSeller" />
        <activity android:name=".BookBuyer" />
